<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @post.title %></h3>
  </div>
  <div class="panel-body">
    <% if @post.user.avatar? %>
    <%= image_tag @post.user.avatar.url, size: 34 %>
    <% end %>
   By: <%= link_to @post.user.username, user_posts_path(id: @post.user_id) %><br><br>
    <%= @post.blog_entry %><br><br>
    <button class="btn btn-warning"><%= link_to 'Edit', edit_post_path(@post) %> </button>
  </div>
</div>

<%= render 'comments/form', comment: @comment %>

<% @post.comments.each do |comment| %>
<% if comment.user.avatar?%>
  <%= image_tag comment.user.avatar.url, size: 34 %>
<% end%>
  <p>
	    <%= link_to comment.user.username, user_posts_path(id: comment.user_id) %> said...<br />
	    <%= comment.comment_entry %>
	</p>
    <% end %>

<button class="btn btn-primary"> <%= link_to 'Back', posts_path %></button>
